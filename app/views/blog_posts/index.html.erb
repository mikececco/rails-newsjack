<main>
 <section class="container py-5 mt-5">
    <%= render 'shared/back' %>
    <div>
        <div class="row">
            <div class="col-xl-12 text-center pb-3">
                <div class="section-title service-title">
                  <h1 class="fw-bold text-center m-0 bigger">Latest blog</h1>
                </div>
