                        <h2 class="blog-title">
                            <%= link_to post.title, blog_post_path(post) %>
                        </h2>
                        <p><%= truncate(post.content, length: 200) %></p>
                    </div>
                    <div class="link-box home-blog-link">
                        <h2><%= link_to "Read More", blog_post_path(post) %></h2>
