<% content_for :title, "NewsJack resources" %>
<% content_for :meta_description, "Empower your brand with NewsJack â€” Seamlessly match trends, harness AI, and generate engaging content. Elevate your brand's presence effortlessly" %>

<main>
 <section class="container py-5 mt-5">
    <%= render 'shared/back' %>
    <div>
        <div class="row">
            <div class="col-xl-12 text-center pb-3">
                <div class="section-title service-title">
                  <h1 class="fw-bold text-center m-0 bigger">Resources</h1>
                </div>
            </div>
        </div>
        <div class="row">
          <% @resources.each do |resource| %>
            <div class="col-xl-4 col-lg-4 col-md-6 mb-30">
              <a href="<%= resource_path(resource) %>" class="text-black text-decoration-none">
                <div class="blog-wrapper home-blog-wrapper white-bg">
                  <div class="blog-content home-blog text-center">
                    <h2 class="blog-title text-center">
                      <%= resource.title %>
                    </h2>
                    <p>
                      <% truncated_content = truncate(strip_tags(resource.content), length: 200) %>
                      <%= markdown(truncated_content) %>
                    </p>
                  </div>
                  <div class="link-box home-blog-link">
                    <h2><%= link_to "Read More", resource_path(resource) %></h2>
                  </div>
                </div>
              </a>
            </div>
          <% end %>
        </div>
    </div>
</section>
