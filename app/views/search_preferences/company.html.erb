<main class="container py-5 mt-5">
  <%= render 'shared/logo' %>
  <%= render 'shared/back' %>
  <div class="row justify-content-center align-items-center">
    <div class="col-lg-6">
      <form action="<%= company_submit_search_preferences_path %>" method="post">
      <div class="text-center mb-4">
        <h1 class="h3 mb-3 fw-normal">Describe your company</h1>
      </div>
      <div class="mb-3 text-center">
        <textarea name="your_textarea_name" id="your_textarea_id" rows="2" cols="40"></textarea>
      </div>
      <div class="form-actions text-center">
        <input type="submit" value="Submit">
      </div>
    </form>
    </div>
  </div>
</main>
