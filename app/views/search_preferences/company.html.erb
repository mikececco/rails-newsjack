<main class="container py-5 mt-5 vh-100">
  <div class="row">
    <div class="col-12">
      <%= render 'shared/back' %>
    </div>
  </div>
  <div class="container py-5 mt-5 px-3">
    <div class="row justify-content-center align-items-center">
      <div class="col-lg-6">
        <form action="<%= company_submit_search_preferences_path %>" method="post">
          <div class="text-center mb-4">
            <h1 class="h3 mb-3 fw-normal">Describe your company</h1>
          </div>
          <div class="mb-3 text-center">
            <textarea rows="2" cols="40" class="form-control"></textarea>
          </div>
          <div class="form-actions text-center">
            <input type="submit" value="Submit" class="custom-link btn btn-lg text-white bg-primary rounded-pill border border-warning d-inline-flex align-items-center justify-content-center">
          </div>
        </form>
      </div>
    </div>
  </div>
</main>
