<main class="container py-5 mt-5 vh-100">
  <div class="row">
    <div class="col-12">
      <%= render 'shared/back' %>
    </div>
  </div>
  <div class="container py-5 mt-5 px-3">
    <div class="row justify-content-center align-items-center">
      <div class="col-lg-6">
        <%= simple_form_for @search_preference do |f| %>
          <div class="text-center mb-4">
            <h1 class="h3 mb-3 fw-normal">Select your base country</h1>
            <p>Detected country:<span class="badge text-black fst-italic"> <%= @country %></span></p>
          </div>
          <div class="mb-3">
            <%= f.country_select :country_code, { priority_countries: [@country] }, { label: false, class: 'form-control' } %>
          </div>
          <div class="form-actions text-center">
            <%= f.button :submit, "Select", class: 'custom-link btn btn-lg text-white bg-primary rounded-pill border border-warning d-inline-flex align-items-center justify-content-center' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
