<body class="g-sidenav-show  bg-gray-100">
  <%= render 'sidebar' %>

  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">

    <%= render 'navbar' %>

    <turbo-frame id="box_1" data-turbo-action="advance">
      <div class="container-fluid py-4">
        <div class="row my-4" data-controller="generate">
          <div class="col-lg-8 col-md-6 mb-md-0 mb-4">
            <div class="card">
              <div class="card-header pb-0">
                <div class="row">
                  <div class="col-lg-6 col-7">
                    <h6>Select country</h6>
                  </div>
                </div>
              </div>
              <div class="container py-5 px-3">
                <div class="row justify-content-center align-items-center">
                  <div class="col-lg-6">
                    <div class="d-flex justify-content-center">
                      <div class="spinner-border mb-3" id="loading-bar" role="status">
                        <span class="visually-hidden">Loading...</span>
                      </div>
                    </div>
                    <%= simple_form_for @search_preference, html: { id: 'search-preference-form' } do |f| %>

                      <div class="text-center mb-4">
                        <p>Detected country:<span class="badge text-black fst-italic"> <%= @country %></span></p>
                      </div>
                      <div class="mb-3">
                        <%= f.country_select :country_code, { priority_countries: [@country] }, { label: false, class: 'form-control' } %>
                      </div>
                      <div class="form-actions text-center">
                        <%= f.button :submit, "Select", class: 'custom-link btn btn-lg text-white bg-primary rounded-pill border border-warning d-inline-flex align-items-center justify-content-center' %>
                        <%# <progress id="content-loading-bar" class="loading-bar" value="0" data-turbo-permanent></progress> %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
    </turbo-frame>
  </main>
</body>
